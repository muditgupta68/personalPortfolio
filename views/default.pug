mixin slide(num,max,src,text,link)
    .mySlides.fade
        .numberText= num+"/"+max
        a(href=link, target="_blank", rel="noopener noreferrer") #[img(src=src, alt="project image")]
        .text= text

mixin expertise(text)
    .cardExpert
        h3= text

